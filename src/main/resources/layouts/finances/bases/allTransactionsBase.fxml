   </left>
   <center>
      <ScrollPane fx:id="transactionsScroll" prefHeight="282.0" prefWidth="467.0" BorderPane.alignment="CENTER">
         <VBox fx:id="transactionsVBox" prefHeight="73.0" prefWidth="465.0" />
