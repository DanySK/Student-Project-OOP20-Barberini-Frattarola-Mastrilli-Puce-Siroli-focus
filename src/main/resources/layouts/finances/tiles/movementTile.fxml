<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="50.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <HBox prefHeight="10000.0" BorderPane.alignment="CENTER">
         <Label fx:id="colorLabel" alignment="CENTER" prefHeight="10000.0" text="●">
            <font>
               <Font name="System Bold" size="30.0" />
            </font>
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin>
         </Label>
         <VBox prefHeight="10000.0">
            <Label fx:id="descriptionLabel" alignment="BOTTOM_LEFT" prefHeight="28.0">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label fx:id="categoryLabel" alignment="TOP_LEFT" prefHeight="23.0" />
         </VBox>
      </HBox>
   </left>
   <center>
      <Label fx:id="dateLabel" prefHeight="50.0" prefWidth="196.0" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin></Label>
   </center>
   <right>
      <HBox prefHeight="50.0" prefWidth="140.0" BorderPane.alignment="CENTER">
         <Label fx:id="minusLabel" alignment="CENTER_RIGHT" prefHeight="10000.0" text="-" visible="false">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin></Label>
         <Label alignment="CENTER_RIGHT" prefHeight="10000.0" text="€  " />
         <Label fx:id="amountLabel" prefHeight="10000.0">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Label>
      </HBox>
   </right>
</BorderPane>
